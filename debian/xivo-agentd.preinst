#!/bin/sh

set -e

case "$1" in
        install)
                # Name of provided service must be unique but xivo-agent provides xivo-agentd,
                # conflicting with us
                if [ -f '/etc/init.d/xivo-agent' ]; then
                        sed -i "/# Provides:/ s/xivo-agentd/xivo-agent/" /etc/init.d/xivo-agent
                fi
        ;;
        upgrade)
        ;;

        abort-upgrade)
        ;;

        *)
                echo "preinst called with unknown argument \`$1'" >&2
                exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
