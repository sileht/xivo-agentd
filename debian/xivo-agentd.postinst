#!/bin/sh
# postinst script for xivo-agentd
#
# see: dh_installdeb(1)

DAEMONNAME='xivo-agentd'
USER='xivo-agentd'
GROUP=$USER
LOG_FILENAME="/var/log/$DAEMONNAME.log"

case "$1" in
    configure)
        # remove the old pidfile created before xivo 16.14
        rm -rf /var/run/xivo-agentd.pid

        # add user
        if ! getent passwd $USER > /dev/null ; then
            echo "Adding system user $USER" 1>&2
            adduser --quiet --system --group --no-create-home \
                    --home /var/lib/xivo-agentd \
                    $USER
            adduser --quiet $USER www-data
        fi

        # setup permissions for the log file and home directory
        if [ ! -e "$LOG_FILENAME" ]; then
            touch "$LOG_FILENAME"
        fi
        chown $USER:$GROUP "$LOG_FILENAME" /var/lib/xivo-agentd

        if dpkg --compare-versions "$2" lt '17.02'; then
            ln -sf  /etc/nginx/locations/https-available/$DAEMONNAME \
                    /etc/nginx/locations/https-enabled/$DAEMONNAME
        fi

    ;;
    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
